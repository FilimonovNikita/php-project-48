#!/usr/bin/env php
<?php

use function Differ\Differ\genDiff;

$autoloadPathCloud = __DIR__ . '/../../../autoload.php';
$autoloadPathLocal = __DIR__ . '/../vendor/autoload.php';

if (file_exists($autoloadPathCloud)){
    require_once $autoloadPathCloud;
} else {
    require_once $autoloadPathLocal;
}

$doc = <<<DOC
Generate diff
Usage: 
    gendiff (-h|--help)
    gendiff (-v|--version)
    gendiff [--format <fmt>] <firstFile> <secondFile>

Options:
  -h --help                     Show this screen
  -v --version                  Show version
  --format <fmt>                Report format [default: stylish]
DOC;

$params = ['version' => 'Differ 1.0.0'];
$args = Docopt::handle($doc, $params);

$pathToFile1 = $args['<firstFile>'];
$pathToFile2 = $args['<secondFile>'];
$format = $args['--format'];

print_r(genDiff($pathToFile1, $pathToFile2, $format));